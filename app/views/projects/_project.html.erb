<div id="project-details-container" class="standard-border">
  <h1 class="bold-primary">
    <%= action_name == "show" ? project.name : link_to(project.name, project_path(project)) %> 
  </h1>
  <div id="project-grid">
    <div id="project-description">
      <%= Kramdown::Document.new(project.description).to_html.html_safe %>
    </div>
    <% if action_name == "show" && policy(project).edit? %>
      <div id="project-settings">
        <%= link_to edit_project_path(project) do %>
          <button class="big-bold-button btn btn-secondary">
            <i class="fa fa-cog" aria-hidden="true"></i>
            Settings
          </button>
        <% end %>
      </div>
    <% end %>
    <div id="project-sidebar-details">
      <div>By: <%= project.user.full_name %></div>
      <div>Status: <%= project.status %></div>
      <div>Estimated Level of effort: <strong><%= project.estimated_level_of_effort %></strong></div>
      <% if project.status == "completed" %>
        <div>Actual Level of effort: <strong><%= project.actual_level_of_effort %></strong></div>
      <% end %>
    </div>
  </div>
</div>