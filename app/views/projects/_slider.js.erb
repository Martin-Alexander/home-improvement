var slider = document.getElementById("myRange");
var display = document.getElementById("ammount-of-effort");
var inputField = document.getElementById("project_actual_level_of_effort");
display.innerHTML = slider.value;

slider.oninput = function() { 
  display.innerHTML = this.value;
  inputField.value = this.value;
}

document.getElementById("complete-project-confirmation-button")
  .addEventListener("click", function() {
    const option = document.createElement("option");
    option.value = "completed";
    option.id = "completed";

    const projectStatus = document.getElementById("project_status");
    projectStatus.add(option);
    projectStatus.value = "completed";

    document.getElementById("projects-form").submit();
  });